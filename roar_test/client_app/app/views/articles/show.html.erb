<h2>Article Detail</h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Artcile ID:</strong>
  <%= @article.id %>
</p>


<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>


<p>
  <strong>Remote Tweet Id:</strong>
  <%= @article.remote_tweet_id %>
</p>

<h2>Tweet Detail</h2>

<p>
  <strong>ID:</strong>
  <%= @tweet.id %>
</p>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>


<ul>
  <% @tweet.tags.each do |tag| %>
    <li>Tag: <%= "#{tag.id}: #{tag.name}" %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
