div(ng-app='todoApp' ng-controller="TodoListController" ng-init="init(#{@task_list.id})")
  form#new_task(ng-submit="addTask()")
    .input-group
      input.form-control.input-lg(type="text" autofocus="autofocus" placeholder="タスク内容" ng-model="taskDescription")
      span.input-group-btn
        button.btn.btn-primary.btn-lg(type="submit") 追加

  ul.list-group
    li.list-group-item(ng-repeat="task in tasks")
      ' {{ task.description }}
