<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2>ユーザー登録</h2>

  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, :placeholder => "メールアドレス", :class => "form-control" %>
  <%= f.password_field :password, :placeholder => "パスワード", :class => "form-control" %>
  <%= f.password_field :password_confirmation, :placeholder => "確認用パスワード", :class => "form-control" %>

  <%= f.submit "ユーザー登録", :class => "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
